//C++输出控制小数点后位数
//在这段代码需用到iomanip这个头文件
#include<cmath>
#include<iostream>
#include<iomanip>
using namespace std;
int main()
{
  int a,b,c,p;
  int mid;
  float s;
  cin>>a>>b>>c;
  p=(a+b+c)/2;
  s=sqrt(p*(p-a)*(p-b)*(p-c));
  cout<<fixed<<setprecision(1)<<s<<endl;//fixed<<setprecision起到了控制小数点后位数的作用
  system("pause");
  return 0;
}
